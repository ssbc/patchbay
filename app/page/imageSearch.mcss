Page -imageSearch {
  overflow-y: auto

  display: grid
  grid-template-columns: 95vw
  grid-template-rows: 5rem auto
  justify-content: center
  align-items: start

  section.settings {
    padding: 1rem 0
    input {
      min-width: 20rem
      padding: .5rem
    }
  }

  section.results {
    display: flex
    justify-content: center
    align-items: center
    flex-wrap: wrap

    div {
      cursor: pointer

      min-width: 5rem
      min-height: 5rem
      max-width: calc(95vw / 4 - 1rem)
      max-height: 19rem

      display: flex
      justify-content: center
      align-items: center

      img {
        max-width: calc(95vw / 4 - 1rem)
        max-height: 19rem
      }

      margin: 0 1rem 1rem 0
    }
  }
}

ImageSearchDetails {
  padding: 1rem

  display: grid
  justify-items: center

  img {
    max-width: 90vw
    max-height: 80vh

    margin-bottom: 1rem
  }

  div.md {
    pre {
      user-select: all
      padding: .2rem
      padding-right: 2rem
      min-width: 39rem
      background-color: var(--highlight)

      text-align: right
      margin-top: .2rem
      display: inline-block
    }
  }

  table {
    tr { 
      td {
        text-align: left
        padding-right: .5rem            
      }

      td.msg {
        font-family: monospace
      }
    }
  }
}
