Markdown {
  (a) {
    color: var(--violet)
    text-decoration: underline

    :hover {
      color: var(--magenta)
    }
  }

  p, ul, ol {
  }

  p {
    :first-of-type { margin-top: 0 }
    :last-of-type { margin-bottom: 0 }

    a {
      img { margin: .5rem 0 }

      :only-of-type {
        img {
          display: block
          margin: auto
        }
      }
    }
  }

  hr {
    height: 0
    border: solid var(--highlight)
    border-width: 1px 0 0
    clear: both
    margin-bottom: .9em
  }

  pre {
    background-color: var(--highlight)
    color: var(--primary)
    padding: .3rem
    white-space: pre-wrap
    word-wrap: break-word

    code {
      $code
      border: none
    }
  }

  (code) {
    $code
      padding: 0.1rem .2rem
  }

  blockquote {
    color: var(--em)
    font-size: 1rem
    line-height: 1.4rem

    background: rgba(0,0,0,.05)
    padding: 1rem
    border-left: 4px solid rgba(0,0,0,.1)
    margin: .5rem 0

    :first-child { margin-top: 0 }
    :last-child { margin-bottom: 0 }

    p {
      :last-child {
        margin-bottom: .35ex
      }
    }
  }

  ul, ol {
    padding-left: 1rem
    margin-top: .35rem

    (ul, ol) {
      padding-left: 1.5rem
    }

  }
  ul.task-list {
    padding-left: 0

    (li.task-list-item) {
      list-style-type: none
    }
  }


  (img.emoji) {
    height: 1.2em
    width: 1.2em
    vertical-align: middle
    margin-top: -0.2em
  }

  (p) {
    img.emoji {
      :only-child {
        width: 3rem
        height: 3rem
      }
    }
  }


  h1, h2, h3, h4, h5, h6 {
    margin: 0
  }
  h1, h2 {
    margin-bottom: .5em
  }
  h1 { font-size: 1.4rem }
  h2 { font-size: 1.2rem }
  h3 { font-size: 1.15rem }
  h4 { font-size: 1.12rem }
  h5 { font-size: 1.1rem }
  h6 { font-size: 1rem }
}

$code {
  background-color: var(--highlight)
  color: var(--primary)
  border: 1px solid var(--highlight)
  border-radius: 2px
}
