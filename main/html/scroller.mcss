Scroller {
  display: flex
  flex-direction: column

  overflow: auto
  width: 100%
  height: 100%
  min-height: 0px

  div.wrapper {
    flex: 1
    width: 600px
    margin-left: auto
    margin-right: auto

    section.content {

      div {
        border-bottom: solid 1px gainsboro
      }
    }
  }
}

Scroller -errors {
  div.wrapper {
    width: initial
    max-width: 100%

    section.content div {
      border: none
    }
  }
}

